# Flight Booking Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/flight_booking

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=8080

# Gmail Configuration for 2FA
# To use Gmail for sending verification emails:

# 1. Enable 2FA on your Gmail account
# 2. Generate an App Password:
#    - Go to Google Account settings
#    - Security → 2-Step Verification → App passwords
#    - Generate password for "Mail"
#    - Use the 16-character password (without spaces)

# Your Gmail address
EMAIL_USER=your-gmail@gmail.com

# Gmail App Password (16 characters, no spaces)
EMAIL_PASS=abcd-efgh-ijkl-mnop

# Stripe Payment Configuration
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Notification Settings
# Thời gian gửi nhắc nhở check-in trước giờ bay (giờ)
CHECKIN_REMINDER_HOURS_BEFORE=24

# Thời gian kiểm tra thay đổi lịch bay (giờ)
FLIGHT_CHANGE_CHECK_INTERVAL=12

# Thời gian dọn dẹp dữ liệu cũ (ngày)
CLEANUP_OLD_DATA_DAYS=7

# Node Environment
NODE_ENV=development
